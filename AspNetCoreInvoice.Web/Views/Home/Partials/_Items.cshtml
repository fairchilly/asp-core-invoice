@model Invoice

<div style="margin-top: 50px;">
    <h4 class="ui dividing header">
        <i class="money bill alternate icon"></i>
        <div class="content">
            Invoice Items
        </div>
    </h4>
    <div id="invoice-item">
        <div id="starter-item">
            <div class="three fields invoice-item">
                <div class="field">
                    <label>Description</label>
                    <input type="text" asp-for="@Model.Items[0].Description" maxlength="500" placeholder="Web Development" required>
                </div>
                <div class="field">
                    <label>Units/Hours</label>
                    <input type="number" asp-for="@Model.Items[0].Units" pattern="^\d*(\.\d{0,2})?$" step="0.01" min="0" placeholder="3.5" required>
                </div>
                <div class="field">
                    <label>Price Per Unit/Hour</label>
                    <input type="number" asp-for="@Model.Items[0].PricePerUnit" pattern="^\d*(\.\d{0,2})?$" step="0.01" min="0" placeholder="20" required="">
                </div>
            </div>
        </div>
    </div>
</div>

<div class="mt-2">
    <div class="fluid ui button" onclick="addRow('item')">
        <i class="plus icon"></i> Add Additional Item
    </div>
</div>
<div id="remove-item" class="mt-2" style="display: none;">
    <div class="fluid ui button red" onclick="removeRow('item')">
        <i class="minus icon"></i> Remove Last Item
    </div>
</div>