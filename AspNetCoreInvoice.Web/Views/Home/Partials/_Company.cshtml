@model Invoice

<div style="margin-top: 20px;">
    <h4 class="ui dividing header">
        <i class="building icon"></i>
        <div class="content">
            Company
        </div>
    </h4>
    <div class="four fields">
        <div class="field">
            <label>Name<span class="required">*</span></label>
            <input type="text" asp-for="@Model.CompanyAddress.Name" maxlength="255" placeholder="Acme Corporation" required>
        </div>
        <div class="field">
            <label>Street</label>
            <input type="text" asp-for="@Model.CompanyAddress.Street" maxlength="255" placeholder="123 Main St.">
        </div>
        <div class="field">
            <label>Unit/Apt</label>
            <input type="text" asp-for="@Model.CompanyAddress.Unit" maxlength="255" placeholder="400">
        </div>
        <div class="field">
            <label>City<span class="required">*</span></label>
            <input type="text" asp-for="@Model.CompanyAddress.City" maxlength="255" placeholder="Los Angeles" required>
        </div>
    </div>
    <div class="four fields">
        <div class="field">
            <label>State/Province</label>
            <input type="text" asp-for="@Model.CompanyAddress.State" maxlength="255" placeholder="CA">
        </div>
        <div class="field">
            <label>Country<span class="required">*</span></label>
            <input type="text" asp-for="@Model.CompanyAddress.Country" maxlength="255" placeholder="United States" required>
        </div>
        <div class="field">
            <label>Zipcode</label>
            <input type="text" asp-for="@Model.CompanyAddress.ZipCode" maxlength="255" placeholder="90210">
        </div>
        <div class="field">
            <label>Phone Number</label>
            <input type="text" asp-for="@Model.CompanyAddress.PhoneNumber" maxlength="255" placeholder="(555) 555-5555">
        </div>
    </div>
</div>